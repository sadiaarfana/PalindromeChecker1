@model Palindrome.Web.Models.PalindromeModel;
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("PalindromeCheck", "Home", FormMethod.Post))
{
    <div class="text-center">
        <h1 class="display-4">Welcome to Palindrome Checker </h1>
    
    </div>
    <br/>
    <div class="row  mt-2">
        <div class="col-md-12"> @Html.LabelFor(model => model.PalindromeString)</div>
    </div>
    <div class="row  mt-2">
        <div class="col-md-12">@Html.EditorFor(model => model.PalindromeString, new { htmlAttributes = new { @class = "form-control" } }) </div>
        @Html.ValidationMessageFor(model => model.PalindromeString, "", new { @class = "text-danger" })

    </div>
    <div class="row mt-2">

        <div class="col-md-3"><input type="submit" value="Check Palindrome" /></div>
    
    </div>
    @if(Model != null && Model.PalindromeString != null)
    {
        <div class="row mt-2">
            @if (Model.IsPalindrome)
            {
                <span class="alert alert-success">SUCCESS! This is palindrome</span>
            }
            else
            {
                
                <span class="alert alert-danger">FAILURE! This is not palindrome</span>
            }
            
            
        </div>
    }
    
} 

